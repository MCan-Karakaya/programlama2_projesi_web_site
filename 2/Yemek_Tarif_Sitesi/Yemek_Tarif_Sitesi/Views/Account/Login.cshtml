@model Yemek_Tarif_Sitesi.Models.LoginModel
@{
    ViewBag.Title = "Login";
}
<head>
    <link rel="stylesheet" href="/Content/Login.css">
    
    <script src="/Scripts/jquery-3.6.0.min.js"></script>
    <script src="/Content/Login.js"></script>
</head>

<h2>Login</h2>
<hr />

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(i => i.Username, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Parola</label>
        @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
    </div>

    <button class="btn btn-primary" type="submit">Login</button>
    <a href="/Home/weirdpage">Kayitli Hesabin Yok mu hemen kayit ol</a>
}

